<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConcurSolutionz.Views.ChooseRootPage"
             Title="Choose root directory">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="False" IsVisible="False"/>

    </Shell.BackButtonBehavior>
    <VerticalStackLayout Margin="10" Padding="16">
        <Label 
            Text="No root directory found!"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="Title"
            Margin="10"/>
        <Button
            Text="Choose root directory"
            Margin="10"
            Clicked="ChooseRoot_Clicked"
            FontSize="Body"/>
        <Label x:Name="filePath"/>


    </VerticalStackLayout>
</ContentPage>
